<div id="todos" class="container">
</div>

<script id="todoTemplate" type="text/x-handlebars-template">
<ul class="list-group">
\{{#each this}}
\{{#unless isDone}}
<li class="list-group-item">
<div>\{{text}}</div><div class="form-check">
  <input class="form-check-input" type="checkbox" id="\{{itemId}}" ><div>priority:\{{priority}}</div><div>\{{dueday}}</div>
</div></div>

</li>
\{{/unless}}
\{{/each}}

</ul>
</script>


<div class="formContainer">
    <form autocomplete="off" class="form-horizontal todoContainer" role="form"
            action="/todo" method="POST">
            <div class="form-group">
            <label for="fieldMessage" class="col-sm-2 control-label">To Do: </label>
            </div>
            <div class="form-group">
            <div class="col-sm-4">
                <input type="text" class="form-control" required id="todo" name="text">
            </div>
          </div>
          <div>
          <label for="daymessage" class="col-sm-2 control-label">when is it do:</label>
        </div>
        <div class="form-group">
        <div class="col-sm-4">
            <input type="text" class="form-control" required id="day" name="dueday">
        </div>
        <label for="prioritymessage" class="col-sm-2 control-label">How Important is it:</label>
      </div>
      <div class="form-group">
      <div class="col-sm-4">
          <input type="number" class="form-control" required id="number" name="priority">
      </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>
<script src="/js/ajax-submit.js">
</script>
